extends ../layout
block body

	div.row
		div.col-md-10
			h2 Live
			div#alertContainer
			div.text-center
				img(src="http://#{serverIp}:8081", alt="...").img-thumbnail
		div.col-md-2
			button(type="button", onclick="snapshot()").btn.btn-danger Bild speichern

	script.
		var i = 0;
		function snapshot() {
			var xmlhttp;
			if (window.XMLHttpRequest)
				{// code for IE7+, Firefox, Chrome, Opera, Safari
				xmlhttp=new XMLHttpRequest();
				}
			else { // code for IE6, IE5
				xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
			}
			xmlhttp.open("GET","http://#{serverIp}:8080/0/action/snapshot",true);
			xmlhttp.send();
			$('#alertContainer').prepend('<div class="alert alert-danger fade in" id="alert-'+i+'">' +
											'<button type="button" class="close" data-dismiss="alert">Ã—</button>' +
											'<strong>Alert!</strong> Here is my message..' +
										'</div>');
			$('#alert-'+i).addClass('in');
			setTimeout(function () {
				$('#alert-'+i).alert('close');
			}, 3000);
		}
