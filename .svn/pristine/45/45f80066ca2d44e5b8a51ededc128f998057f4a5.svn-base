#!/bin/bash
zeit=$(date +%Y-%m-%d-%H-%M)

dbquery=$(mysql -u root -e "use nistkasten; select filename from picture WHERE isBackuped = 0 AND file_type = 8")
array=( $( for i in $dbquery ; do echo $i ; done ) )

cnt=${#array[@]}
for (( i=1 ; i<cnt ; i++ ))
do 
	cp /home/pi/nistkasten/public/birdimage/normal/${array[$i]}.ogv /home/pi/nistkasten/bashscripts/backup_video/zipfolder/${array[$i]}.ogv
	echo "Video zum Backupordner hinzufuegen $i: ${array[$i]}" >> /var/log/nistkasten.log
done

if (($cnt > 0))
then
	cd /home/pi/nistkasten/bashscripts/backup_video/zipfolder
	zip /home/pi/nistkasten/bashscripts/backup_video/backup_$zeit.zip ./*
	wput /home/pi/nistkasten/bashscripts/backup_video/backup_$zeit.zip ftp://$2:$3@$1/backup_video_$zeit.zip -B âˆ’a /var/log/nistkasten.log
	if [[ $? != 0 ]]; then
	  echo "Transfer failed!" >> /var/log/nistkasten.log
	  exit 2
	else
	  echo "Transfer ueber FTP fertiggestellt." >> /var/log/nistkasten.log
		string=""
		for (( i=1 ; i<cnt ; i++ ))
		do
	        	if(($i==1))
			then
				string="filename LIKE '${array[$i]}'"
			else
				string+=" OR filename LIKE '${array[$i]}'"
			fi
	    	done
		mysql -u root -e "use nistkasten; UPDATE picture SET isBackuped = 1 WHERE ($string) AND file_type = 8"
		if [[ $? != 0 ]]; then
	        	echo "Backup failed by MySQL saveing!" >> /var/log/nistkasten.log
          	else
			rm /home/pi/nistkasten/bashscripts/backup_video/backup_$zeit.zip
		fi
		rm /home/pi/nistkasten/bashscripts/backup_video/zipfolder/*
		exit 0
	fi
else
	echo "Keine neuen Videos fuer eine Sicherung verfuegbar" >> /var/log/nistkasten.log
	exit 1
fi
