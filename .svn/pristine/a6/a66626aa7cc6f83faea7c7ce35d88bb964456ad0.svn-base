extends ../layout
block body

	div.row
		div.col-md-10
			h2 Live
			div#alertContainer
			div.text-center
				//img(src="http://#{serverIp}:8081", alt="...").img-thumbnail
				img(src="http://meisenhaus.dlinkddns.com:8081", alt="...").img-thumbnail
		div(style="padding-top:20px;").col-md-2
			if(req.user)
				button(type="button", onclick="snapshot()").btn.btn-danger Bild speichern

	script.
		var i = 0;
		function snapshot() {
			var xmlhttp;
			if (window.XMLHttpRequest)
				{// code for IE7+, Firefox, Chrome, Opera, Safari
				xmlhttp=new XMLHttpRequest();
				}
			else { // code for IE6, IE5
				xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
			}
			xmlhttp.open("GET","/picture/take",true);
			xmlhttp.send();
			$('#alertContainer').prepend('<div class="alert alert-success fade in" id="alert-'+i+'">' +
											'<button type="button" class="close" data-dismiss="alert">Ã—</button>' +
											'<strong>Gespeichert!</strong> Das angezeigte Bild wurde gespeichert.' +
										'</div>');
			$('#alert-'+i).addClass('in');
			setTimeout(function () {
				$('#alert-'+i).alert('close');
			}, 3000);
		}
