.thumbnail {
    padding: 0px;
}

.thumbnail .caption {
    font-size: 13px;
    padding: 0px;
    padding-top: 5px;
    padding-bottom: 3px;
    color: #c2c2c2;
}
.thumbnail .caption hr {
    margin-top:3px;
    margin-bottom:5px;
}

.thumbnail .caption .text,
.thumbnail .caption .actions{
    color: #c2c2c2;
    margin-left: 10px;
}

.thumbnail .caption a{
    color: #c2c2c2;
}

.thumbnail .caption a.green{
    color: #4cae4c;
}

.thumbnail .caption a.red{
    color: #c9302c;
}

.thumbnail .caption a:hover{
    color: #428bca;
}

/*
 * Masthead for nav
 */

.blog-masthead {
    background-color: #428bca;
    box-shadow: inset 0 -2px 5px rgba(0,0,0,.1);
}

/* Nav links */
.blog-nav-item {
    position: relative;
    display: inline-block;
    padding: 10px;
    font-weight: 500;
    color: #cdddeb;
}
.blog-nav-item:hover,
.blog-nav-item:focus {
    color: #fff;
    text-decoration: none;
}

/* Active state gets a caret at the bottom */
.blog-nav .active {
    color: #fff;
}
.blog-nav .active:after {
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 0;
    margin-left: -5px;
    vertical-align: middle;
    content: " ";
    border-right:  5px solid transparent;
    border-bottom: 5px solid;
    border-left:   5px solid transparent;
}