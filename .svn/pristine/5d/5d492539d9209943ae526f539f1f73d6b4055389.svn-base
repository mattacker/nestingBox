							span.icon-bar
							span.icon-bar
						a(href="/").navbar-brand Olli's Nistkasten
					div.navbar-collapse.collapse
						ul.nav.navbar-nav
							li.active
								a(href="/") Home
							li
								a(href="/livestream") Live Stream
							li
