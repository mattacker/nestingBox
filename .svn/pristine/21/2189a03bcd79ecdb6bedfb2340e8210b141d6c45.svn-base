extends ../layout
block body
	br
	div.row
		div.col-lg-4
			div.panel.panel-primary
				div.panel-heading Speicherverwaltung
				table.table.table-striped
					tr
						th Anzahl der Aufnahmen
						td 50
					tr
						th Verwendeter Speicherplatz
						td #{usedMemory} MB
					tr
						th Noch verfügbarer Speicherplatz
						td 50 MB
		div.col-lg-4
			div.panel.panel-primary
				div.panel-heading Bewegungserkennung
				table.table.table-striped
					tr
						th Ein-/Ausschalten
						td
							div.btn-group
								button(type="button").btn.btn-success.active Ein
								button(type="button").btn.btn-danger Aus
					tr
						th Auflösung
						td 1280 x 720
					tr
						th Threshold
						td 1500